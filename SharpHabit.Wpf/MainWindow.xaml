<Window x:Class="SharpHabit.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpHabit.Wpf"
        mc:Ignorable="d"
        Title="Sharp Habit" Height="450" Width="800"
        xmlns:vm="clr-namespace:SharpHabit.Wpf.ViewModels">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        
        <StackPanel Width="300">
            <Border Background="#1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Foreground="White"
                   Text="{Binding DoneHabits, Mode=OneWay, StringFormat=Done today: {0}}" />

                    <TextBlock Foreground="White"
                   Text="{Binding TotalHabits, Mode=OneWay, StringFormat=Total habits: {0}}"
                   Margin="0,4,0,0"/>

                    <ProgressBar Height="16" Margin="0,10,0,0"
                     Minimum="0" Maximum="100"
                     Value="{Binding TodayPercentage, Mode=OneWay}" />

                    <TextBlock Foreground="White" Margin="0,6,0,0"
                   Text="{Binding TodayPercentage, Mode=OneWay, StringFormat=Today: {0:0}%}" />
                </StackPanel>
            </Border>

            <TextBox 
                Text="{Binding NewHabitName, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,8" Height="26"/>

            <Button 
                Background="Aqua" 
                Width="150" 
                Content="Add habit"
                Command="{Binding AddHabitCommand}"
                Margin="0,0,0,12" Height="26" FontFamily="Comic Sans MS" FontSize="14"/>

            <ItemsControl ItemsSource="{Binding Habits}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="6" CornerRadius="6" Margin="0,4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDoneToday}" Value="True">
                                            <Setter Property="Background" Value="#2E7D32"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <DockPanel>
                                <CheckBox  
                                    IsChecked="{Binding IsDoneToday, Mode=TwoWay}"
                                    Margin="0,0,8,0"
                                    Command="{Binding DataContext.ToggleTodayCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="White"/>
                            </DockPanel>
                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
        
    </Grid>
</Window>
