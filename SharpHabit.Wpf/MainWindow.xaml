<Window x:Class="SharpHabit.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpHabit.Wpf"
        mc:Ignorable="d"
        
        xmlns:vm="clr-namespace:SharpHabit.Wpf.ViewModels"
        Title="SharpHabit" Height="450" Width="800">
        
        
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    
    <Grid>
        <StackPanel>
            <TextBlock Text="Today" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <Border Padding="12" CornerRadius="30" Margin="30" Background="DarkGreen">
                <StackPanel>

                    <!-- Top row: Done/Total and Refresh button -->
                    <DockPanel LastChildFill="False" Margin="0,0,0,8">
                        <TextBlock Foreground="White" FontSize="14" VerticalAlignment="Center">
                            <Run Text="Done " />
                            <Run Text="{Binding DoneHabits, Mode=OneWay}" />
                            <Run Text=" / " />
                            <Run Text="{Binding TotalHabits, Mode=OneWay}" />
                        </TextBlock>

                        <Button 
                            Content="Refresh Stats"
                            Command="{Binding RefreshStatsCommand}"
                            Margin="12,0,0,0"
                            DockPanel.Dock="Right"
                        />
                    </DockPanel>

                    <!-- Progress bar -->
                    <ProgressBar Height="16"
                     Minimum="0" Maximum="100"
                     Value="{Binding CompletionPercent, Mode=OneWay}" />

                    <!-- Percentage text -->
                    <TextBlock 
                        Foreground="White"
                        FontSize="14"
                        Margin="0,8,0,0"
                        Text="{Binding CompletionPercent, Mode=OneWay, StringFormat=Completion: {0:0}%}" 
                    />


                </StackPanel>
            </Border>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox 
                    Width="260"
                    Margin="0,0,12,0"
                    Text="{Binding NewHabitName, UpdateSourceTrigger=PropertyChanged}" 
                />

                <Button 
                    Content="Add Habit"
                    Width="120"
                    Command="{Binding AddHabitCommand}" 
                />
            </StackPanel>

            <TextBlock Text="Month" FontSize="18" FontWeight="SemiBold" Margin="0,12,0,8"/>

            <!-- Days header: empty space for habit names + 1..31 -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- left header cell -->
                <TextBlock Grid.Column="0" Text="Habit"
               Foreground="Gray"
               VerticalAlignment="Center"/>

                <!-- day numbers row -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding MonthDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Habit rows -->
            <ItemsControl ItemsSource="{Binding MonthRows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- habit name -->
                            <TextBlock Grid.Column="0"
                           Text="{Binding HabitName}"
                           VerticalAlignment="Center"/>

                            <!-- cells -->
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding Days}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="18" Height="18"
                                    CornerRadius="3"
                                    Margin="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#2A2A2A"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                            <Setter Property="Background" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <!-- Clickable area -->
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding ToggleCellCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </StackPanel>
    </Grid>
</Window>
