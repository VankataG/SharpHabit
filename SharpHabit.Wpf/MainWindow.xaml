<Window x:Class="SharpHabit.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpHabit.Wpf"
        mc:Ignorable="d"
        Title="Sharp Habit" Height="650" Width="900"
        xmlns:vm="clr-namespace:SharpHabit.Wpf.ViewModels"
        xmlns:conv="clr-namespace:SharpHabit.Wpf.Converters"
        xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:PercentToHeightConverter x:Key="PercentToHeight"/>
        <SolidColorBrush x:Key="SoftSurface" Color="#F3F6FB"/>
    </Window.Resources>
    

    <Grid Background="#F0F4F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0,10,0">

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Center">
                    <Button Content="◀ Prev" Width="65" Command="{Binding PrevMonthCommand}" />
                    <TextBlock Text="{Binding CurrentMonthText}" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="10,0" VerticalAlignment="Center"/>
                    <Button Content="Next ▶" Width="65" Command="{Binding NextMonthCommand}" />
                </StackPanel>

                <Border Background="{StaticResource SoftSurface}" CornerRadius="12" Padding="12" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Monthly completion" FontSize="16" FontWeight="SemiBold" Foreground="#1B2A41" HorizontalAlignment="Center"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- left side empty space above habit names -->
                            <Border Grid.Column="0" Background="Transparent"/>

                            <!-- chart only above day columns -->
                            <Border Grid.Column="1"
                                Background="#F3F6FB"
                                BorderBrush="#D6DEEA"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="10">

                                <sp:WpfPlot x:Name="CompletionPlot" Height="140"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Month header -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    

                    <ItemsControl Grid.Column="1" ItemsSource="{Binding MonthDays}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="Gray" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <ItemsControl ItemsSource="{Binding MonthRows}" AlternationCount="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4" CornerRadius="6" BorderThickness="1" BorderBrush="#E5EAF2">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>

                                        <Style.Triggers>
                                            <DataTrigger Value="1">
                                                <DataTrigger.Binding>
                                                    <Binding Path="(ItemsControl.AlternationIndex)"
                                                             RelativeSource="{RelativeSource AncestorType=ContentPresenter}"/>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="#E1E7F0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HabitName}"
                                            FontWeight="Bold"
                                            VerticalAlignment="Center"/>

                                        <Button Content="✕"
                                            Width="18"
                                            Height="18"
                                            Margin="8,0,0,0"
                                            FontSize="12"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Foreground="DarkRed"
                                            Command="{Binding DataContext.RemoveHabitCommand,
                                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                    </StackPanel>


                                    <ItemsControl Grid.Column="1" ItemsSource="{Binding Cells}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="22" Height="22">
                                                    <!-- Today column background (behind the cell) -->
                                                    <Border x:Name="TodayBg" CornerRadius="4">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                                        <Setter Property="Background" Value="LightBlue"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>


                                                    <!-- Actual cell -->
                                                    <Border Width="18" Height="18" Margin="2"
                                                        CornerRadius="3"
                                                        Cursor="Hand"
                                                        ToolTip="{Binding Date}">

                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="LightGray"/>
                                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                                <Setter Property="BorderThickness" Value="1"/>

                                                                <Style.Triggers>
                                                                    <!-- Done -->
                                                                    <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                                        <Setter Property="Background" Value="#2E7D32"/>
                                                                    </DataTrigger>

                                                                    <!-- Hover -->
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="BorderBrush" Value="#2E7D32"/>

                                                                        <Trigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                         To="1.08"
                                                                                         Duration="0:0:0.08"/>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                        To="1.08"
                                                                                        Duration="0:0:0.08"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.EnterActions>

                                                                        <Trigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                           To="1"
                                                                                           Duration="0:0:0.08"/>
                                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                           To="1"
                                                                                           Duration="0:0:0.08"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.ExitActions>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <Border.Triggers>
                                                            <EventTrigger RoutedEvent="MouseLeftButtonDown">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                            To="0.6"
                                                                            Duration="0:0:0.05"
                                                                            AutoReverse="True"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Border.Triggers>

                                                        <Border.RenderTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Border.RenderTransform>
                                                        <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>

                                                        <Border.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                Command="{Binding DataContext.ToggleCellCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}" />
                                                        </Border.InputBindings>
                                                    </Border>
                                                </Grid>

                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBox 
                    Text="{Binding NewHabitName, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8" Height="26"/>

                <Button 
                    
                    Background="#2E7D32"
                    Width="150" 
                    Content="Add habit"
                    Command="{Binding AddHabitCommand}"
                    Margin="0,0,0,12" 
                    Height="26" 
                    FontFamily="Arial" 
                    FontSize="14"
                    />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
